{% extends 'layout.html.twig' %}

{% block title %}
	{{parent()}}- Connexion
{% endblock %}

{% block content %}
	<div class="MainConnection">
		<div class="d-flex justify-content-center">
			<div
				class="LoginContainer animate__animated animate__bounceIn">

				<!-- Displaying errors, might need rework -->
				{% if errors is not empty %}
					<div class="errorLoginContainer">
						<ul>
							{% for error in errors %}
								<li class="errorLogin alert alert-danger" role="alert">‚ùå
									{{ error }}</li>
							{% endfor %}
						</ul>
					</div>
				{% endif %}

				<div class="d-flex justify-content-center">
					<h2>Connexion</h2>
				</div>


				<form class="LoginForm" method="post" action="">

					<div class="form-Outline mb-4">
						<label class="form-label" for="email">Adresse e-mail :</label>
						<input class="form-control LoginInput" type="email" id="mail" name="mail" placeholder="exemple@exemple.com" required>
					</div>

					<div class="form-outline mb-4">
						<label class="form-label" for="password">Mot de passe :</label>
						<input class="form-control LoginInput" type="password" id="password" name="password" placeholder="Mot de passe" maxlength="20" required>
					</div>

					<div class="d-flex justify-content-center">
						<div class="LoginValidation">
							<div class="loginRemember form-check">
								<input class="form-check-input LoginCheckbox" type="checkbox" value="" id="form2Example31" checked/>
								<label class="form-check-label" for="form2Example31">
									Se souvenir de moi
								</label>
							</div>

							<div class="form-outline mb-4">
								<input type="submit" class="btn LoginButton" value="Connexion">
							</div>

							<div class="form-outline mb-4">
								<p class="LoginCreate">Pas de compte ?
									<a class="LoginCreateLink" href="https://www.twitch.tv/spinigotilla">C'est dommage...</a>
								</p>
							</div>

						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
